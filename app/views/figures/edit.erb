<h1>Edit A Figure</h1>
<hr />
<form method="POST" action="/figures/<%=@figure.id%>">
<label>Figure Name:</label>  <input type="text" value="<%=@figure.name%>" name="figure[name]" id="figure_name" />

<p>
  <label>Enter a new landmark:</label>  <input type="text" name="landmark[name]" id='new_landmark'/></p>

<p><label>Or select a different landmark: </label>
  <br />
<% Landmark.all.each do |landmark| %>

<input type="checkbox" name="figure[landmark_ids][]"  id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"
 <%='checked' if @figure.landmarks.include?(landmark) %> > <%=landmark.name%></input>
<% end %></p>

<p><label>Enter a new title:</label> <input type="text" name="title[name]" id='new_title' /></p>

<p><label>Or select a different title:</label>
    <br />
<% Title.all.each do |title| %>
<input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id%>"  value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %> > <%=title.name%></input>
<% end %>
</p>

<P>
<input type="submit" value="Edit Figure" />
</form></P>
